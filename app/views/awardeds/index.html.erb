<head>
  <style>
    h1, tr, td {
      text-align: center;
    }
  </style>
</head>
<h1>Awarded Projects</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<br>
<table class="table">
  <thead>
    <tr>
      <th>Date Awarded</th>
      <td>&nbsp;</td>
      <th>Award ID</th>
      <td>&nbsp;</td>
      <th>Project ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awardeds.each do |awarded| %>
      <tr>
        <td><%= awarded.AwardedDate %></td>
        <td>&nbsp;</td>
        <td><%= Award.find(awarded.AwardID).AwardName %></td>
        <td>&nbsp;</td>
        <td><%= Project.find(awarded.ProjectID).ProjectName %></td>
        <td><%= link_to 'Show', awarded %></td>
        <td><%= link_to 'Edit', edit_awarded_path(awarded) %></td>
        <td><%= link_to 'Delete', awarded, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Award Project', new_awarded_path %>
