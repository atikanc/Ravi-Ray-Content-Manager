<head>
  <style>
    h1, tr, td {
      text-align: center;
    }
  </style>
</head>
<h1>Project-Contribution Associations</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<br>
<table class="table">
  <thead>
    <tr>
      <th>Component Contributed</th>
      <td>&nbsp;</td>
      <th>Component Start Date</th>
      <td>&nbsp;</td>
      <th>Component End Date</th>
      <td>&nbsp;</td>
      <th>Contributed Project</th>
      <td>&nbsp;</td>
      <th>Contributed Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @display_lines.each do |display_line| %>
      <tr>
        <td><%= display_line.ComponentContributed %></td>
        <td>&nbsp;</td>
        <td><%= display_line.ComponentStartDate %></td>
        <td>&nbsp;</td>
        <td><%= display_line.ComponentEndDate %></td>
        <td>&nbsp;</td>
        <td><%= display_line.Project.ProjectName %></td>
        <td>&nbsp;</td>
        <td><%= display_line.Contribution.ContributionType %></td>
        <td><%= link_to 'Show', display_line %></td>
        <td><%= link_to 'Edit', edit_display_line_path(display_line) %></td>
        <td><%= link_to 'Delete', display_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

